<Window x:Class="coh2ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:coh2ui"
        xmlns:loc="clr-namespace:coh2ui.loc"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="750">
    
    <Window.Resources>
        <!-- common button -->
        <Style x:Key="ServiceButton" TargetType="Button">
            <Setter Property="Width" Value="20" />
            <Setter Property="Height" Value="20" />
            <Setter Property="ToolTipService.ShowDuration" Value="3000" />
            <Setter Property="Background" Value="#2a572f" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    

    
    <Grid x:Name="Maingrid">
        <Grid.RowDefinitions>
            <!-- other govno -->
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Keys -->
            <ColumnDefinition Width="350*"></ColumnDefinition>
            <!-- settings -->
            <ColumnDefinition Width="250*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <DockPanel x:Name="SystemDocker"
            Grid.Column="0" 
            Grid.ColumnSpan="2" 
            VerticalAlignment="Top"> 
            <ListBox Background="#1a1a1a">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Background="#3c6b37"
                            Margin="0,3"
                        />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            
                <ListBoxItem>
                    <TextBlock Text="{x:Static loc:Strings.ProcessFound}"></TextBlock>
                </ListBoxItem>
                <ListBoxItem>
                    <TextBlock Text="{x:Static loc:Strings.ProcessFoundFalse}"></TextBlock>
                </ListBoxItem>
            </ListBox>
        </DockPanel>
            
        <!-- keys -->
        <DockPanel Margin="0,30,0,0" Grid.Column="0">
            <DockPanel Height="30"
                       VerticalAlignment="Top">
                
                <ListBox Background="#162214">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                Orientation="Horizontal"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"
                            />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    
                    <ListBoxItem>
                        <Button Style="{StaticResource ResourceKey=ServiceButton}"
                                ToolTip="{x:Static loc:Strings.AddButton}"
                                Click="AddButton">
                            <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Foreground="White" />
                        </Button>
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Style="{StaticResource ResourceKey=ServiceButton}"
                                ToolTip="{x:Static loc:Strings.DeleteButton}"
                                Click="DeleteButton">
                            <materialDesign:PackIcon Kind="Minus" Width="20" Height="20" Foreground="White" />
                        </Button>
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Style="{StaticResource ResourceKey=ServiceButton}"
                                ToolTip="{x:Static loc:Strings.EditButton }"
                                Click="EditButton">
                            <materialDesign:PackIcon Kind="Edit" Width="20" Height="20" Foreground="White" />
                        </Button>
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Style="{StaticResource ResourceKey=ServiceButton}"
                                ToolTip="во всём виноват rock"
                                Click="NineButton">
                            <materialDesign:PackIcon Kind="NumericNine" Width="20" Height="20" Foreground="White" />
                        </Button>
                    </ListBoxItem>
                </ListBox>
                
                
            </DockPanel>
        </DockPanel>
        <ScrollViewer Grid.Column="0" Margin="0,60,0,0">
            <ListBox
                x:Name="KeysList"
                Background="#3b5537"
                BorderThickness="0"
                MouseDoubleClick="KeysList_OnMouseDoubleClickClicked">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:Key}">
                        <Border Margin="0 0" Padding="19"
                                Background="#173017"
                                CornerRadius="5"
                                Effect="{DynamicResource Shadow}">
                            <DockPanel VerticalAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="{Binding FromBind}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White" />
                                    <TextBlock Text="{Binding ToBind}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Foreground="White" />
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        
        
        <!-- settings -->
        <DockPanel Margin="0,30,0,0" Grid.Column="1">
            <ListBox>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Vertical"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                        />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                
                <ListBoxItem>
                    <CheckBox Content="{x:Static loc:Strings.LockMouse}"></CheckBox>
                </ListBoxItem>
                
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
